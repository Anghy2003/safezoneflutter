<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema que se usa SOLO al lanzar la app (pantalla splash) -->
    <style name="LaunchTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Fondo mientras Flutter inicializa -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Tema normal cuando ya cargó Flutter -->
    <style name="NormalTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Ojo: black en minúsculas -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>
